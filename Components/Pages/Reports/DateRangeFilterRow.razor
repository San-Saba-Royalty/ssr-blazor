@using MudBlazor
@using SSRBlazor.Models

<MudGrid Class="mb-2 align-center">
    <MudItem xs="12" sm="2">
        <MudText Typo="Typo.body2">@Label:</MudText>
    </MudItem>
    <MudItem xs="6" sm="2">
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
            <MudText Typo="Typo.caption" Style="min-width: 35px;">From:</MudText>
            <MudDatePicker @bind-Date="Filter.FromDate"
                           Variant="Variant.Outlined"
                           
                           Margin="Margin.Dense"
                           DateFormat="MM/dd/yyyy"
                           Style="max-width: 140px;" />
        </MudStack>
    </MudItem>
    <MudItem xs="6" sm="2">
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
            <MudText Typo="Typo.caption" Style="min-width: 25px;">To:</MudText>
            <MudDatePicker @bind-Date="Filter.ToDate"
                           Variant="Variant.Outlined"
                           
                           Margin="Margin.Dense"
                           DateFormat="MM/dd/yyyy"
                           Style="max-width: 140px;" />
        </MudStack>
    </MudItem>
    <MudItem xs="12" sm="4">
        <MudStack Row="true" Spacing="2">
            <MudCheckBox @bind-Value="Filter.IsEmpty" 
                         Label="Is Empty" 
                         
                         Size="Size.Small" />
            <MudCheckBox @bind-Value="Filter.IsNotEmpty" 
                         Label="Is Not Empty" 
                         
                         Size="Size.Small" />
        </MudStack>
    </MudItem>
    @if (!Filter.IsValid)
    {
        <MudItem xs="12" sm="2">
            <MudText Typo="Typo.caption" Color="Color.Error">
                @Filter.ValidationError
            </MudText>
        </MudItem>
    }
</MudGrid>

@code {
    [Parameter]
    public string Label { get; set; } = string.Empty;

    [Parameter]
    public DateRangeFilter Filter { get; set; } = new();
}
