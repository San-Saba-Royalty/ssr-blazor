@using MudBlazor
@using SSRBusiness.Entities
@using System.ComponentModel.DataAnnotations

<MudDialog>
    <DialogContent>
        <MudForm Model="@AppraisalGroup" @ref="_form">
            <MudGrid>
                @* Main Info *@
                <MudItem xs="12">
                    <MudTextField @bind-Value="AppraisalGroup.AppraisalGroupName" 
                                Label="Appraisal Group Name" 
                                Required="true"
                                MaxLength="50"
                                Immediate="true"/>
                </MudItem>

                @* Contact Info *@
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="AppraisalGroup.ContactName" Label="Contact Name" MaxLength="50" />
                </MudItem>
                <MudItem xs="12" sm="6">
                     <MudTextField @bind-Value="AppraisalGroup.Attention" Label="Attention" MaxLength="50" />
                </MudItem>

                <MudItem xs="12" sm="4">
                    <MudTextField @bind-Value="AppraisalGroup.ContactPhone" Label="Phone" MaxLength="24" />
                </MudItem>
                <MudItem xs="12" sm="4">
                    <MudTextField @bind-Value="AppraisalGroup.ContactFax" Label="Fax" MaxLength="24" />
                </MudItem>
                <MudItem xs="12" sm="4">
                    <MudTextField @bind-Value="AppraisalGroup.ContactEmail" Label="Email" MaxLength="50" />
                </MudItem>

                @* Address Info *@
                <MudItem xs="12">
                    <MudTextField @bind-Value="AppraisalGroup.AddressLine1" Label="Address Line 1" MaxLength="100" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="AppraisalGroup.AddressLine2" Label="Address Line 2" MaxLength="100" />
                </MudItem>
                <MudItem xs="12">
                     <MudTextField @bind-Value="AppraisalGroup.AddressLine3" Label="Address Line 3" MaxLength="100" />
                </MudItem>

                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="AppraisalGroup.City" Label="City" MaxLength="50" />
                </MudItem>
                <MudItem xs="6" sm="3">
                    <MudTextField @bind-Value="AppraisalGroup.StateCode" Label="State" MaxLength="2" />
                </MudItem>
                <MudItem xs="6" sm="3">
                    <MudTextField @bind-Value="AppraisalGroup.ZipCode" Label="Zip Code" MaxLength="10" />
                </MudItem>

            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public AppraisalGroup AppraisalGroup { get; set; } = new();

    private MudForm _form = default!;

    private async Task Submit()
    {
        await _form.Validate();
        if (_form.IsValid)
        {
            MudDialog.Close(DialogResult.Ok(AppraisalGroup));
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
