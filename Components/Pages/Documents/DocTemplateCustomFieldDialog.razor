@using SSRBusiness.Entities
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <EditForm Model="@CustomField" OnValidSubmit="Submit">
            <DataAnnotationsValidator />
            
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Label="Custom Phrase" 
                                  @bind-Value="CustomField.CustomPhrase"
                                  Required="true"
                                  RequiredError="Custom phrase is required"
                                  HelperText="The descriptive text that will appear in the document"
                                  Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField Label="Custom Tag" 
                                  @bind-Value="CustomField.CustomTag"
                                  Required="true"
                                  RequiredError="Custom tag is required"
                                  HelperText="The merge field tag (without angle brackets)"
                                  Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12">
                    <MudAlert Severity="Severity.Info" Dense="true">
                        Example: Custom Phrase = "Buyer Name", Custom Tag = "BUYER_NAME"<br/>
                        In the document, use &lt;BUYER_NAME&gt; as the merge field.
                    </MudAlert>
                </MudItem>
            </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">
            @(IsNew ? "Add" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public DocTemplateCustomField CustomField { get; set; } = new();

    [Parameter]
    public bool IsNew { get; set; }

    private void Submit()
    {
        if (string.IsNullOrWhiteSpace(CustomField.CustomPhrase) || 
            string.IsNullOrWhiteSpace(CustomField.CustomTag))
        {
            Snackbar.Add("Please fill in all required fields", Severity.Error);
            return;
        }

        MudDialog.Close(DialogResult.Ok(CustomField));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
