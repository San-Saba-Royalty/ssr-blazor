@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation

@code {
    protected override void OnInitialized()
    {
        var returnUrl = Navigation.Uri;
        // Check if we are already on the login page to avoid loops
        if (!Navigation.Uri.Contains("/account/login"))
        {
             Navigation.NavigateTo($"/account/login?returnUrl={Uri.EscapeDataString(returnUrl)}", forceLoad: true);
        }
    }
}
